{
    "app-id": "org.gnome.GHex",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "ghex",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=host"
    ],
    "cleanup": [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/share/gir-1.0",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "ghex",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/ghex/48/ghex-48.0.tar.xz",
                    "sha256": "aa1d0ab5f74304aaa31987a182d421d63f19ce02465d7c642696e316123e30a8",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "ghex",
                        "stable-only": true
                    }
                }
            ]
        }
    ]
}
