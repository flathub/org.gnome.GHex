{
    "app-id": "org.gnome.GHex",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "ghex",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=host"
    ],
    "cleanup": [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/share/gir-1.0",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "ghex",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/ghex/46/ghex-46.2.tar.xz",
                    "sha256": "a8f276a36397a70d20b862ff7c664243d9cf2891deb9be06d745a4f1ac661f31",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "ghex",
                        "stable-only": true
                    }
                }
            ]
        }
    ]
}
